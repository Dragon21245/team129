<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books - Library Management System</title>
    <link rel="stylesheet" href="books.css">
</head>
<body>
    <header>
        <h1>Library Management System</h1>
        <nav>
            <ul>
                <li><a href="/books">Books</a></li>
                <li><a href="/patrons">Patrons</a></li>
                <li><a href="/branches">Branches</a></li>
                <li><a href="/loans">Loans</a></li>
                <li><a href="/genres">Genres</a></li>
            </ul>
        </nav>
    </header>
    <section class="content">
        <h2>Books</h2>
        <p>This page allows users to manage books in the library.</p>

        <!-- Form to Add a New Book -->
        <h3>Add a New Book</h3>
        <form action="/books" method="POST">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" required>
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" name="isbn" required>
            <label for="branchID">Branch ID:</label>
            <input type="number" id="branchID" name="branchID" required>
            <button type="submit">Add Book</button>
        </form>

        <!-- Table to Display Books -->
        <h3>Book List</h3>
        <table class="book-table">
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Branch ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.BookID %></td>
                        <td><%= book.Title %></td>
                        <td><%= book.Author %></td>
                        <td><%= book.ISBN %></td>
                        <td><%= book.BranchID %></td>
                        <td>
                            <!-- Form to Update Book -->
                            <form action="/books/<%= book.BookID %>?_method=PUT" method="POST">
                                <label for="title">Title:</label>
                                <input type="text" id="title" name="title" value="<%= book.Title %>" required>
                                <label for="author">Author:</label>
                                <input type="text" id="author" name="author" value="<%= book.Author %>" required>
                                <label for="isbn">ISBN:</label>
                                <input type="text" id="isbn" name="isbn" value="<%= book.ISBN %>" required>
                                <label for="branchID">Branch ID:</label>
                                <input type="number" id="branchID" name="branchID" value="<%= book.BranchID %>" required>
                                <button type="submit">Update</button>
                            </form>

                            <!-- Button to Delete Book -->
                            <form action="/books/<%= book.BookID %>?_method=DELETE" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="return-btn">
            <a href="/">Return to Home</a>
        </div>
    </section>
    <footer>
        <p>&copy; 2024 Library Management System, Ross, Cody, Andrew</p>
    </footer>
</body>
</html>
